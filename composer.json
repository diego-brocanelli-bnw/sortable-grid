{
    "name": "plexi/sortable-grid",
    "description": "Grade de dados com recursos de pesquisa, ordenação e seletor de registros para Laravel e Blade templates",
    "keywords": ["laravel","cruds","grids","data-tables","blade","helpers"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ricardo Pereira",
            "email": "rpdesignerfly@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "laravel/framework": "~5.5"
    },
    "autoload": {
        "psr-4": {
            "SortableGrid\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SortableGrid\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        },
        "laravel": {
            "providers": [
                "SortableGrid\\ServiceProvider"
            ],
            "aliases": {
                "SortableGrid": "SortableGrid\\Facade"
            }
        }
    },
    "require-dev": {
        "illuminate/framework": "5.5.x"
    }
}
